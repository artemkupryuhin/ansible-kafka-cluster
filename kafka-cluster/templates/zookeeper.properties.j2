# the directory where the snapshot is stored.
dataDir={{ kafka_zookeeper_dataDir }} 
# the port at which the clients will connect
clientPort=2181

{% if not kafka_zookeeper_cluster %}
maxClientCnxns=0
# Disable the adminserver by default to avoid port conflicts.
# Set the port to something non-conflicting if choosing to enable this
admin.enableServer=false
# admin.serverPort=8080
{% endif %}

{% if kafka_zookeeper_cluster %}

tickTime=2000
initLimit=5
syncLimit=2

{% for node in groups[ kafka_cluster_group_hosts ] %}
server.{{ loop.index0+1 }} = {{ hostvars[node]['ansible_all_ipv4_addresses'][0] }}:2888:3888
{% if not loop.last %}
{% endif %}
{%endfor%}
{% endif %}


